<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
    <TextView
        android:visibility="gone"
        android:id="@+id/article_type"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="type"
        android:textSize="13sp"
        android:textColor="@color/primary_text_default_material_light"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">
    <TextView
        android:id="@+id/article_section_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="section_name"
        android:textSize="13sp"
        android:textColor="@color/primary_text_default_material_light"/>
    <TextView
        android:id="@+id/article_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_text_default_material_light"
        android:text="beautiful header"
        android:textSize="22sp"/>
    <RelativeLayout
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/article_img"
            android:layout_width="wrap_content"
            android:minWidth="70dp"
            android:maxWidth="150dp"
            android:layout_marginLeft="3dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toStartOf="@+id/article_img"
            android:layout_toLeftOf="@+id/article_img"
            android:layout_alignParentLeft="true">
            <TextView
                android:id="@+id/article_autor"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="by "
                android:textSize="13sp"
                android:textColor="@color/text_third_grey"
                />
            <TextView
                android:id="@+id/article_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date "
                android:visibility="gone"
                android:textSize="13sp"
                android:textColor="@color/accent_400"
                />
        </LinearLayout>


        <TextView
            android:id="@+id/article_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="content"
            android:textSize="15sp"
            android:textColor="@color/text_second_grey"
            android:layout_below="@+id/linear1"
            android:layout_toLeftOf="@+id/article_img"
            android:layout_toStartOf="@+id/article_img" />

    </RelativeLayout>

</LinearLayout>
</RelativeLayout>
</android.support.v7.widget.CardView>
