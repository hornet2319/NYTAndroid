<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="teamvoy.com.nytandroid" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.ArticleFilterActivity"
            android:label="@string/title_activity_article_filter"
            android:parentActivityName=".ui.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="teamvoy.com.nytandroid.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.ContentActivity"
            android:label="@string/title_activity_content"
            android:parentActivityName=".ui.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="teamvoy.com.nytandroid.ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.MostPopularFilterActivity"
            android:label="@string/title_activity_most_popular_filter"
            android:parentActivityName=".ui.MainActivity"
            android:theme="@style/AppTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="teamvoy.com.nytandroid.ui.MainActivity" />
        </activity>
    </application>

</manifest>
